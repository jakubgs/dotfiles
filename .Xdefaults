Xft.dpi:        130
Xft.antialias:  true
Xft.hinting:    true
Xft.rgba:       rgb
Xft.hintstyle:  hintslight

Xcursor.theme: Vanilla-DMZ

!.imLocale:             pl_PL.ISO-8859-2
!*imLocale:             en_GB.UTF-8
!*geometry:             120x35

*font:              xft:Inconsolata:size=14:lang=pl:antialias=true:hinting=true
*boldFont:          xft:Inconsolata:size=14:Bold:lang=pl:antialias=true:hinting=true

! Disable printing
*print-pipe:           "cat > /dev/null"

*scrollBar:            false
*internalBorder:       false
*externalBorder:       false
*thickness:            0
*borderWidth:          1

! Fake Transparency
!*transparent: true
!*shading:35 

! for colors
*depth: 32

! Clickable links
*perl-ext-common: default,font-size,matcher,-option-popup,-selection-popup,-realine
!*url-launcher:    /usr/bin/chromium
*url-launcher:    brave
*matcher.button:  1
*colorUL:         #a6c9f8

! on the fly font size manipulation
.font-size.step:  4
! mappings
*keysym.C-Up:     perl:font-size:increase
*keysym.C-Down:   perl:font-size:decrease
*keysym.C-S-Up:     perl:font-size:incglobal
*keysym.C-S-Down:   perl:font-size:decglobal

! disable default ctrl+shift bindings
*iso14755: false
*iso14755_52: false

! configuration for selecting and pasting
*copyCommand:      xsel -ib
*pasteCommand:     xsel -ob

! scrolling stops once you go back
*scrollTtyOutput:      false
*scrollWithBuffer:     true
*scrollTtyKeypress:    true
*mouseWheelScrollPage: false

*background:           #242424
*foreground:           #e9e9e9
*cursorColor:          #ffffff
*cursorColor2:         #000000
*cursorBlink:          false
*saveLines:            10000
*cutchars:             "`'\",;@&*=|?()<>[]{}"

!! Colors !!
! Black
*color0:  #2E3436
*color8:  #555753
! Red
*color1:  #CC0000
*color9:  #EF2929
! Green (White)
!*color2:  #EBEBEB
*color2:  #afd700
*color10: #afd700
! Yellow
*color3:  #C4A000
*color11: #FCE94F
! Blue
*color4:  #3465A4
*color12: #729FCF
! Purple
*color5:  #75507B
*color13: #AD7FA8
! Cyan (Blue)
*color6:  #7e9fd5
*color14: #34E2E2
! White
*color7:  #D3D7CF
*color15: #EEEEEC


! Xterm
!xterm*faceName:         xft:Terminus:size=14
!xterm*toolBar:          false
!xterm*background:       #191919
!xterm*foreground:       white
!xterm*cursorColor:      LightBlue
!xterm*pointerShape:     arrow
!xterm*pointerColor:     blue
!xterm*scrollTtyOutput:  false
!xterm*scrollKey:        true
!xterm*geometry:         80x25
