#!/usr/bin/env bash

set -e

PLAYLIST="/tmp/playlist.m3u"

# parse options
while getopts ":s" o; do
    case "${o}" in
        s)
            OPTIONS="--shuffle"
            ;;
        *)
            echo "Usage: $0 [-s] [DIRS|FILES] .."
            ;;
    esac
done
shift $((OPTIND-1))

if [[ -z $1 ]]; then
    DIRS=$(pwd)
else
    DIRS=$(realpath "$@")
fi

echo "Scanning ${DIRS}"

find "$DIRS" -type f \
-iname "*.webm" -o \
-iname "*.wmv" -o \
-iname "*.mp4" -o \
-iname "*.m4v" -o \
-iname "*.mkv" -o \
-iname "*.avi" -o \
-iname "*.mpg" -o \
-iname "*.moV" -o \
-iname "*.flv" -o \
-iname "*.asf" -o \
-iname "*.divx" -o \
-iname "*.mp4" | \
sort \
> "$PLAYLIST"

COUNT=$(wc -l $PLAYLIST)
echo "Found $COUNT video files."

mpv $OPTIONS --quiet --fs --playlist=$PLAYLIST \
    | awk 'BEGIN{FS="/"}/Playing:/{I++; printf(" *%3d - %s\n", I, $NF)}'

rm $PLAYLIST
