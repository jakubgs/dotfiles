# Hibernation & Locking {{{

"sudo systemctl start suspend.target"
  m:0x40 + c:39
  Mod4+Shift + s

"lock"
  m:0x50 + c:46
  Mod2+Mod4 + l

"lock"
  m:0x5 + c:46
  Control+Shift + l

# }}}
# Screen {{{
"xrandr --output eDP-1 --rotate left"
    m:0xd + c:113
    Control+Shift+Alt + Left
"xrandr --output eDP-1 --rotate right"
    m:0xd + c:114
    Control+Shift+Alt + Right
"xrandr --output eDP-1 --rotate normal"
    m:0xd + c:111
    Control+Shift+Alt + Up
# }}}
