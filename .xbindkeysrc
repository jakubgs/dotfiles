# Volume {{{
# Volume up
"amixer set Master 5%+"
  m:0x0 + c:123
  XF86AudioRaiseVolume

# Volume down
"amixer set Master 5%-"
  m:0x0 + c:122
  XF86AudioLowerVolume

# Volume Mute
"amixer set Master toggle"
  m:0x0 + c:121
  XF86AudioMute

# }}}
# Volume {{{

"xbacklight -inc 15"
  m:0x0 + c:233
  XF86MonBrightnessUp

"xbacklight -dec 15"
  m:0x0 + c:232
  XF86MonBrightnessDown

# }}}
"mpc prev"
  m:0x0 + c:173
  XF86AudioPrev

"mpc toggle"
  m:0x0 + c:172
  XF86AudioPlay

"mpc next"
  m:0x0 + c:171
  XF86AudioNext

"mpc stop"
  m:0x1 + c:135
  Shift + Menu

"mpc seek -5"
  m:0x10 + c:87

"mpc seek +5"
  m:0x10 + c:89

"mpc volume -5"
  m:0x10 + c:79"

"mpc volume +5"
  m:0x10 + c:81

"mpc random on && mpc next && mpc random off"
  m:0x1 + c:104
  Shift + KP_Enter

"mpc random"
  m:0x1 + c:68
  Shift + F2
